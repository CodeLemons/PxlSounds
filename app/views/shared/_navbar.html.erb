<div class="navbar">
  <%= link_to worlds_path do %>
    <div class="logo">
      <h1 style="color: #DF2935;">P</h1>
      <h1 style="color: #FDCA40;">X</h1>
      <h1 style="color: #3772FF">L</h1>
      <h1 style="color: white">SOUNDS</h1>
    </div>
  <% end %>
  <div class="navbar-drop">
    <% if user_signed_in? %>
      <li class="navbar-link"><%= link_to "Logout", destroy_user_session_path, class: "links", data: {turbo_method: :delete} %></li>
    <% else %>
      <li class="navbar-link"><%= link_to "Login", new_user_session_path, class: "links" %></li>
    <% end %>

    <%# Cloudinary %>
    <% if user_signed_in? %>
      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key %>
      <% else %>
        <%= image_tag "Temp_logo.jpg" %>
      <% end %>
    <% end %>
    <%# End of cloudinary %>
  </div>
</div>
