<div class="main-container">
  <%= render "shared/navbar" %>
  <div class="wrapper">
    <div class="card-container">
      <div class="mix-container">
          <h3>My Mixes</h3>
        <div class="cards-border"></div>
        <div class="mix-cards" style="overflow-y: scroll; height: 260px;">
          <% @mixes.each do |mix| %>
            <div class="mix-card">
              <div class="mix-name">
                <%= link_to mix.name, edit_world_mix_path(mix.world, mix) %>
              </div>
              <div class="world-name">
                <p><%= mix.world.name %></p>
              </div>
              <div class="play-button">
                <i class="fa-solid fa-circle-play"></i>
              </div>
            </div>
          <% end %>
        </div>
        <div class="cards-border"></div>
      </div>
      <div class="worlds-container">
        <% @worlds.each do |world| %>
          <%= link_to world_path(world) do %>
            <div class="world-card" style="background-image: url('<%= cl_image_path( world.image.key ) %>');">
              <h1><%= world.name %></h1>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="image-container", data-controller="random-display" >
      <div class="image-box", data-random-display-target="image" >
        <%# worlds_images = [] %>
        <%# @worlds.each do |world| %>
          <%# worlds_images << world.image.key %>
        <%# end %>
        <%= cl_image_tag @worlds.sample.image.key %>
        <%# <% cl_image_tag @mixes.each do |mix| %>
          <%# <%= mix.world.image.key, class: "src" %>
        <%# <% end %>
       </div>
      <div class="mix-overlay">
        <div class="mix-image">
          <i class="fa-solid fa-circle-play"></i>
        </div>
        <div class="mix-content">
          <h3>wow</h3>
          <input type="range" id="volume" name="volume" min="0" max="10">
        </div>
      </div>
    </div>
  </div>
</div>
